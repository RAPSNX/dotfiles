{
    "layer": "top",
    "position": "top",
    "spacing": 0,
    "height": 50,
    "modules-left": [
        "custom/logo",
        "hyprland/workspaces"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "tray",
        "memory",
        "network",
        "backlight",
        "pulseaudio",
        "battery"
    ],
    "wlr/taskbar": {
        "format": "{icon}",
        "on-click": "activate",
        "on-click-right": "fullscreen",
        "icon-theme": "WhiteSur",
        "icon-size": 25,
        "tooltip-format": "{title}"
    },
    "hyprland/workspaces": {
        "on-click": "activate",
        "format": "{icon}",
        "format-icons": {
            "1": "",
            "2": "",
            "3": "3",
            "4": "",
            "5": "",
            "6": "6"
        },
        "persistent-workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": [],
            "5": [],
            "6": []
        }
    },
    "memory": {
        "interval": 5,
        "format": "󰍛 {}%",
        "max-length": 10
    },
    "tray": {
        "spacing": 12,
        "size": 15
    },
    "clock": {
        "tooltip-format": "{calendar}",
        "format-alt": "  {:%a, %d %b %Y}",
        "format": "{:%H:%M }"
    },
    "network": {
	      "format-ethernet": "{ifname} ⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
        "format-icons": ["󰤯","󰤟","󰤢","󰤥","󰤨"],
	      "format-alt" : "󱛇",
        "format-disconnected" : "󰖪",
	      "tooltip-format-wifi": "{icon} {essid}\n⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
        "tooltip-format-ethernet": "󰀂  {ifname}\n⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
	      "tooltip-format-disconnected": "Disconnected",
	      "on-click": "~/.config/rofi/wifi/wifi.sh &",
        "on-click-right": "~/.config/rofi/wifi/wifinew.sh &",
	      "interval": 5,
	      "nospacing": 1
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-bluetooth": "󰂰 {volume}%",
        "format-muted": "󰝟 Muted",
        "tooltip-format": "Volume: {volume}%\nDevice: {desc}",
        "format-icons": {
            "headphone": "",
            "handsfree": "󰋎",
            "default": [ "󰖀", "󰕾", "" ]
        },
        "on-click": "pavucontrol",
        "scroll-step": 5,
        "nospacing": false
    },
    "backlight": {
      "device": "amdgpu_bl1",
      "format": "󰃠 {percent}%",
      "scroll-step": 5,
      "format-icons": ["", ""]
    },
    "battery": {
      "format": "{icon} {capacity}%",
      "format-charging": " {capacity}%",
      "format-icons": ["", "", "", "", ""],
      "interval": 10
    },
    "custom/logo": {
        "format": " ❄️",
        "tooltip": false
    }
}

